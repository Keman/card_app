<div class="container">
  <div class="col-xs-12">
    <h3 class="text-center">Все пользователи</h3>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Почта</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= user.email %></td>
            <td><%= link_to "Изменить", edit_user_path(user) %></td>
            <td><%= link_to "Удалить", user_path(user),
                    method: :delete,
                    date: { confirm: "Точно?" } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
