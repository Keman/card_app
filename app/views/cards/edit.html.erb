<div class="container">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 text-center">
    <h3>Изменить карточку</h3>
    <% if @card.picture.present? %>
      <%= image_tag @card.picture.url %>
      <%= button_to "Удалить картинку", card_path(card: {picture: "delete"}), method: :patch, class: "btn btn-default" %>
    <% end %>
    <%= render "form", card: @card %>
  </div>
  <div class="col-xs-3"></div>
</div>
