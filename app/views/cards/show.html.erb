<div class="container">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 text-center">
    <h3>Карточка №<%= @card.id %></h3>
    <p>
      <strong>Слово:</strong>
      <%= @card.original_text %>
    </p>
    <p>
      <strong>Перевод:</strong>
      <%= @card.translated_text %>
    </p>
    <p>
      <strong>Дата пересмотра:</strong>
      <%= @card.review_date.to_formatted_s(:date_with_slashes) %>
    </p>
  </div>
  <div class="col-xs-3"></div>
</div>
