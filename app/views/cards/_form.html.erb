<%= simple_form_for card do |f| %>
  <%= f.input :original_text, as: :string, label: "Слово" %>
  <%= f.input :translated_text, as: :string, label: "Перевод" %>
  <%= f.association :deck, collection: Deck.of_user(current_user),
                           include_blank: false,
                           label_method: :description,
                           label: "Колода" %>
  <%= f.input :picture, as: :file, label: "Картинка" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="text-center"><%= f.button :submit, value: "ОК" %></div>
<% end %>
